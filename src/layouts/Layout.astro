---
import Header from "../components/Header.jsx";
import Footer from "../components/Footer.astro";
import Footer1 from "../components/Footer1.jsx";
import WhatsappButton from "../components/WhatsappButton.astro";
import { getLangFromUrl } from "../i18n/utils";

interface Props {
	title: string;
}

const { title } = Astro.props;
const lang = getLangFromUrl(Astro.url);

const test = Astro.props;
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link
			rel="icon"
			type="image/svg+xml"
			href="../../public/img/icon.jpeg"
		/>
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-[#f5f1ec]">
		<Header siteUrl={Astro.url} lang={lang} test={test} client:load />
		<section class="min-h-[800px]">
			<slot />
		</section>
		<WhatsappButton />
		<Footer1 siteUrl={Astro.url} lang={lang} test={test} client:load />
	</body>
</html>
